{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "noEmit": false
  },
  "include": ["src/tokens-to-tw.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts", "**/*.vue"]
} 