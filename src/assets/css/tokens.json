{
  "theme": {
    "breakpoint": { "s": "600px", "m": "1200px" },
    "color": {
      "white": "rgb(255, 255, 255)",
      "black": "rgb(0, 0, 0)",
      "grey": { "100": "rgb(240, 240, 240)", "900": "rgb(50, 50, 50)" }
    },
    "spacing": {
      "0": "0px",
      "s": { "default": "4px", "s": "6px", "m": "8px" },
      "m": { "default": "12px", "s": "18px", "m": "24px" },
      "l": { "default": "20px", "s": "32px", "m": "48px" }
    },
    "radius": {
      "DEFAULT": "4px"
    },
    "blur": {
      "DEFAULT": "20px"
    },
    "aspect": { "video": "16/9", "thumb": "4/5" }
  },
  "fonts": {
    "sans": {
      "font-family": "Giga Haas Display",
      "font-weight": "500",
      "font-style": "normal",
      "src": "url('/fonts/gigahaasdisplay-500.woff2') format('woff2')"
    }
  },
  "components": {
    ".typo": {
      "xl": {
        "font-family": "var(--font-sans)",
        "font-size": { "default": "60px", "s": "72px", "m": "80px" },
        "line-height": "1.2"
      },
      "l": {
        "font-family": "var(--font-sans)",
        "font-size": { "default": "24px" },
        "line-height": "1.2"
      },
      "m": {
        "font-family": "var(--font-sans)",
        "font-size": { "default": "18px" },
        "line-height": "1.2"
      },
      "s": {
        "font-family": "var(--font-sans)",
        "font-size": { "default": "14px" },
        "line-height": "1.2"
      }
    }
  }
}
